simplified_ui false
pane_frames true
default_layout "default"
default_shell "fish"
auto_layout true

options {
    // Store the last 1000 lines for each pane
    scroll_buffer_size 1000
}

ui {
    pane_frames {
        rounded_corners true
    }
}

// Disable startup tips
show_startup_tips false

keybinds {
    shared {
        bind "Alt 1" { NewTab; }
        bind "Alt 2" { GoToNextTab; }
        bind "Alt 3" { CloseTab; }
    }
}
